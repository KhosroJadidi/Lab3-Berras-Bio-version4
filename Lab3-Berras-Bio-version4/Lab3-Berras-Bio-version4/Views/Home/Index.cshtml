@model HomeViewModel

    @foreach (var showing in Model.Showings)
    {        
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail m-3">
                <img src="@showing.Movie.ImageURL" alt="@showing.Movie.Title" />
                <h2>@showing.Movie.Title</h2>
                <div class="caption">
                    <h3 class="float-left">
                        Date:@showing.StartHour.ToString("dd/MM/yyyy")
                        <br />
                        Time:@showing.StartHour.ToString("HH:mm tt")
                    </h3>
                    @if (showing.TotalSeats - showing.OccupiedSeats > 0)
                    {
                    <h4 class="float-left">
                        Open seats: @(showing.TotalSeats-showing.OccupiedSeats)
                        <br />                        
                    </h4>
                    <form asp-action="OnPostBookTicket" asp-route-id="@showing.Id" method="post">
                        <button>Book now!</button>
                    </form>                        
                    }
                    else
                    {
                        <h4 class="float-left">
                            All seats are booked!
                        </h4>
                    }
                </div>              
            </div>                       
        </div>
    }
